<div class="month-container">
<%= link_to custodies_path(range: "month") do %>
  <p class="display-month" data-toggle="tooltip" data-placement="bottom" title="Voir le mois"><%= l(@custodies.first.day_on, format: "%B").capitalize %></p>
<% end %>
</div>

<div class="custodies-container">

  <% @custodies.each do |custody| %>

    <div class="custody <%= custody.user == current_user ? 'bg-user-1' : "bg-user-2" %>">
      <span class="day"><%= l(custody.day_on, format: "%A")%></span>
      <span class="date"><%= custody.day_on.day %></span>
      <span class="month"><%= l(custody.day_on, format: "%B")%></span>
      <span id="user-custody"><%= custody.user.first_name %></span>

      <ul class="list-inline button-container">

        <% if custody.future? %>
          <li>
            <%= link_to edit_custody_path(custody) do  %>
              <button type="button" class="button-circle align-right"  data-toggle="tooltip" data-placement="bottom" title="Changer le planning">
                <span class="glyphicon glyphicon-transfer" aria-hidden="true"></span>
              </button>
            <% end %>
          </li>

        <% else %>

        <% if custody.poor? %>
          <li><!-- button edit -->
            <%= link_to edit_custody_path(custody) do  %>
              <button type="button" class="button-circle" data-toggle="tooltip" data-placement="bottom" title="Editer un moment" >
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              </button>
            <% end %>
          </li>
        <% else %>
          <li><!-- button open  -->
            <%= link_to custody_path(custody) do  %>
            <button type="button" class="button-circle"  data-toggle="tooltip" data-placement="bottom" title="Voir le moment">
              <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
            </button>
            <% end %>
          </li>
          <% end %>
        <% end %>
        <li>
          <%= link_to profile_path  do  %>
          <div class="avatar" data-toggle="tooltip" data-placement="bottom" title="Voir mon profil"
          style="background-image: url('<%= cl_image_path custody.user.avatar, height: 300, width: 400, crop: :fill %>')">
          </div>
          <% end %>

        </li>
      </ul>

      <div class="img-txt-container">
        <div class="text-container">
          <h4><%= custody.title %></h4>
          <p id="text-custody"><%= custody.text %></p>

        </div>
        <div class="img-container">
          <% unless custody.media[0].nil? %>
            <p class="img-custody" style="background-image:
        url('<%= cl_image_path custody.media[0].photo.url, height: 300, width: 400, crop: :fill %>')">
              </p>
          <% end %>
        </div>
      </div>
          <!-- photoswipe -->
          <div class="thumbail-container">
            <div class="my-gallery " itemscope itemtype="http://schema.org/ImageGallery">
              <% custody.media.each do |photo|  %>
                <figure class="inline" itemprop="associatedMedia" itemscope itemtype="http://schema.org/ImageObject">
                  <a href="<%= "#{photo.photo}" %>" itemprop="contentUrl" data-size="500x600">
                    <span class="thumbails" temprop="thumbnail" alt="Image description">
                    <%= cl_image_tag("#{photo.photo}", width: 30, height: 30, crop: :fill) %>
                    </span>
                  </a>
                </figure>
              <% end %>
            </div>
          </div>
          <!-- photoswipe -->
    </div>
  <% end %>

  <div class="btn-previous">
    <%= link_to custodies_path(number: (params[:number].to_i - 1)) do %>
      <button type="button" class="button-circle"  data-toggle="tooltip" data-placement="bottom" title="Voir semaine précédente">
        <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
      </button>
    <% end %>
  </div>

  <div class="btn-next">
    <%= link_to custodies_path(number: (params[:number].to_i + 1)) do %>
      <button type="button" class="button-circle"  data-toggle="tooltip" data-placement="bottom" title="Voir semaine suivante">
        <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
      </button>
    <% end %>
  </div>

<%= render 'shared/messages', receiver: @receiver, sender: @sender,  message: @message, messages: @messages %>

<button type="button" class="button-open-chat" data-toggle="tooltip" data-placement="top" title="Ouvrir le chat" >
  <span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
</button>

<button type="button" class="button-circle btn-close-chat" data-toggle="tooltip" data-placement="top" title="Fermer le chat" >
  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
</button>


<div class="pswp" tabindex="-1" role="dialog" aria-hidden="true">

    <!-- Background of PhotoSwipe.
         It's a separate element, as animating opacity is faster than rgba(). -->
    <div class="pswp__bg"></div>

    <!-- Slides wrapper with overflow:hidden. -->
    <div class="pswp__scroll-wrap">

        <!-- Container that holds slides. PhotoSwipe keeps only 3 slides in DOM to save memory. -->
        <!-- don't modify these 3 pswp__item elements, data is added later on. -->
        <div class="pswp__container">
            <div class="pswp__item"></div>
            <div class="pswp__item"></div>
            <div class="pswp__item"></div>
        </div>

        <!-- Default (PhotoSwipeUI_Default) interface on top of sliding area. Can be changed. -->
        <div class="pswp__ui pswp__ui--hidden">

            <div class="pswp__top-bar">

                <!--  Controls are self-explanatory. Order can be changed. -->

                <div class="pswp__counter"></div>

                <button class="pswp__button pswp__button--close" title="Close (Esc)"></button>

                <!-- <button class="pswp__button pswp__button--share" title="Share"></button> -->

                <button class="pswp__button pswp__button--fs" title="Toggle fullscreen"></button>

                <button class="pswp__button pswp__button--zoom" title="Zoom in/out"></button>

                <!-- Preloader demo https://codepen.io/dimsemenov/pen/yyBWoR -->
                <!-- element will get class pswp__preloader--active when preloader is running -->
                <div class="pswp__preloader">
                    <div class="pswp__preloader__icn">
                      <div class="pswp__preloader__cut">
                        <div class="pswp__preloader__donut"></div>
                      </div>
                    </div>
                </div>
            </div>

            <div class="pswp__share-modal pswp__share-modal--hidden pswp__single-tap">
                <div class="pswp__share-tooltip"></div>
            </div>

            <button class="pswp__button pswp__button--arrow--left" title="Previous (arrow left)">
            </button>

            <button class="pswp__button pswp__button--arrow--right" title="Next (arrow right)">
            </button>

            <div class="pswp__caption">
                <div class="pswp__caption__center"></div>
            </div>

          </div>

        </div>

</div>




