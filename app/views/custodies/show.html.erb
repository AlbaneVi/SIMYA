

<div class="show-container">

<div class="body-left">

  <div class="show-date">
    <span class="day"> <%= @custody.day_on.strftime("%A") %></span>
    <span class="date"> <%= @custody.day_on.day %></span>
    <span class="month"> <%= @custody.day_on.strftime("%B") %></span>
  </div>

  <% @media.each do |medium| %>
    <div class="show-photo"
    style="background-image: url('<%= cl_image_path medium.photo, height: 300, width: 400, gravity: :faces, crop: :fill %>')">
    </div>

  <% end %>

</div>

<div class="body-right">

  <div class="show-btn">
    <%= link_to do  %>
    <div class="btn-change-date-user-2"></div>
    <% end %>
    <div class="avatar-1"></div>
    <%= link_to custodies_path do  %>
    <div class="btn-close"></div>
    <% end %>
  </div>

<h4> <%= @custody.title %></h4>
<p> <%= @custody.text %></p>

</div>



</div>
