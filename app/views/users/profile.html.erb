  <div class="profile-title">
    <h4>Mon profil</h4>
  </div>

  <div class="row">
    <div class="col-md-6 col-lg-3 ">
      <%= render 'shared/user_profile', user: @parent1, background_class: 'bg-user-1' %>
    </div>


    <div class="col-xs-3">
      <div class="child">
        <div class="child-info">
            <div class="child-fullname">
               <p><strong>Prénom:</strong>    <%= @parent1.child.first_name %></p>

               <p><strong>Nom:</strong>       <%= @parent1.child.last_name %></p>
            </div>
            <div class="child-birth">
               <p><strong>Date de naissance:</strong> <%= @parent1.child.birthday %></p>
            </div>
        </div>
      </div>


    </div>
     <div class="col-md-6 col-lg-3">
      <%= render 'shared/user_profile', user: @parent2, background_class: 'bg-user-2' %>
    </div>
     <%= link_to custodies_path do  %>
      <button type="button" class="button-circle" data-toggle="tooltip" data-placement="bottom" title  ="Voir le planning" >
        <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
      </button>
      <% end %>

     <%= link_to edit_profile_path do  %>
      <button type="button" class="button-circle" data-toggle="tooltip" data-placement="bottom" title  ="Modifier mon profil" >
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      </button>
      <% end %>

      <%= link_to destroy_user_session_path,method: :delete do  %>
      <button type="button" class="button-circle" data-toggle="tooltip" data-placement="bottom" title  ="Se déconnecter" >
        <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
      </button>
      <% end %>
  </div>




